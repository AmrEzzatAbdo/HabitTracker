<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amrez.habittracker.insertDataActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="@dimen/IDataWidth"
        android:layout_height="wrap_content"
        android:hint="@string/HName" />

    <EditText
        android:id="@+id/age"
        android:layout_width="@dimen/IDataWidth"
        android:layout_height="wrap_content"
        android:hint="@string/HAge" />

    <EditText
        android:id="@+id/bio"
        android:layout_width="@dimen/IDataWidth"
        android:layout_height="wrap_content"
        android:hint="@string/HBio" />

    <Button
        android:id="@+id/BInsertData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="OnInsert"
        android:text="@string/BInsert" />

</LinearLayout>
